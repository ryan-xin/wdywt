<!DOCTYPE html>
<html>
  <head>
    <title>Wdywt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>

    <nav class="nav_main">
      <div class="nav_main_wrapper">
        <div class="nav_left">
          <%= link_to image_tag("logo.svg", alt: "WDYWT Logo", class: "logo"), posts_path %>
        </div>
        <div class="nav_right">
          <% if @current_user.present? %>
            <ul class="nav_menu">
              <li>Hello, <%= @current_user.name %></li>
              <li><%= link_to "Setting", user_path(@current_user.id) %></li>
              <li><%= link_to "Logout", login_path, method: "delete" %></li>
              <li><%= link_to "Post", new_post_path %></li>
            </ul>
          <% else %>
            <ul class="nav_menu">
              <li><%= link_to "Login", login_path %></li>
              <li><%= link_to "Sign Up", new_user_path %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>

    <footer>
      <div class="footer_wrapper">
        <div class="footer_left">
          <p>&copy 2020 Ryan Xin - General Assembly SEI 37.</p>
        </div>
        <div class="footer_right">
          <ul class="nav_menu">
            <li><p><%= link_to "LinkedIn", "https://www.linkedin.com/in/ryan-xin/" %></p></li>
            <li><p><%= link_to "GitHub", new_user_path %></p></li>
          </ul>
        </div>
      </div>
    </footer>

  </body>
</html>
