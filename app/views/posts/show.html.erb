<!-- <%= link_to 'Back', :back %> -->
<a name="start"></a><br>

<%= image_tag @post.image, alt: @post.description, class: "post_image" %><br>

<!--# like -->
<% pre_liked = @post.likes.find { |like| like.user_id == @current_user.id} %>
<% if Like.where(user_id: @current_user.id, post_id: @post.id).exists? %>
  <%= button_to "Unlike", post_like_path(@post.id, pre_liked.id), method: "delete" %>
<% else %>
  <%= button_to "Like", post_likes_path(@post.id), method: "post" %>
<% end %>

<%= @post.likes.count %><%= (@post.likes.count) <= 1 ? " like" : " likes" %><br>

<%= check_user_image_small(@post.user) %>
<strong><%= link_to @post.user.name, user_path(@post.user_id) %></strong><br>

<%= @post.created_at.strftime("%e %b %Y %l:%M %p") %><br>

<strong><%= @post.user.name %></strong>
<%= @post.description %><br>

<!-- # Comments -->
<% @post.comments.each do |comment| %>
  <strong><%= comment.user.name %></strong>
  <%= comment.content %><br>

  <%= comment.created_at.strftime("%e %b %Y %l:%M %p") %><br>

  <% if @current_user.id == comment.user_id %>
    <%= link_to "Delete", comment_path(comment.id), method: "delete" %>
  <% end %><br>
<% end %>

<a name="end"></a>
<!-- # Comment Field -->
<%= form_for @comment do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.text_field :content %>
  <%= f.submit ("Comment") %>
<% end %>

<!-- # If @current_user equals post user show "edit" & "delete" -->
<% if @current_user.id == @post.user_id %>
  <%= link_to "Edit", edit_post_path(@post.id) %>
  <%= link_to "Delete", post_path(@post.id), method: "delete" %>
<% end %>