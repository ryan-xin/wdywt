<%= link_to 'Back', :back %>

<h2>Edit Profile</h2>


<%= form_for @user, html: {multipart: true} do |f| %>

  <%= f.label :image, "Upload photo" %>
  <!-- # <%= f.text_field :image %> -->
  <%= f.cl_image_upload :image %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :password %>
  <%= f.text_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  
  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <%= f.submit %>

<% end %>