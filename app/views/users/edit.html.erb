<%= link_to 'Back', :back %>

<h2>Edit Profile</h2>

<%= form_for @user do |f| %>

  <%= f.label :image %>
  <%= f.text_field :image %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :password %>
  <%= f.text_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  
  <%= f.label :bio %>
  <%= f.text_field :bio %>

  <%= f.submit %>

<% end %>