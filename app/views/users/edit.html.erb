<div class="center_wrapper">
  <p class="back_button"><%= link_to 'Back', :back %></p>

  <h1>Edit Profile</h1>

  <div class="form">
    <%= form_for @user, html: {multipart: true} do |f| %>

      <%= f.label :image, "Upload photo" %>
      <!-- # <%= f.text_field :image %> -->
      <%= f.cl_image_upload :image %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :password %>
      <%= f.text_field :password %>
      
      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation %>
      
      <%= f.label :bio %>
      <%= f.text_area :bio, rows: "7" %>

      <%= f.submit "Update profile", class: "button_submit"  %>

    <% end %>
  </div>
</div>